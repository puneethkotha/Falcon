# Application Settings
APP_NAME=falcon-ml-inference-platform
APP_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO
WORKER_ID=worker-1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# Model Configuration
MODEL_PATH=/app/models/classifier.pkl
MODEL_TYPE=sklearn
ENABLE_BATCHING=true
BATCH_SIZE=32
BATCH_TIMEOUT_MS=100

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Postgres Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=falcon_inference
POSTGRES_USER=falcon
POSTGRES_PASSWORD=falcon_dev_password_change_in_prod
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10
POSTGRES_POOL_TIMEOUT=30
POSTGRES_POOL_RECYCLE=3600

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=true

# Idempotency Configuration
IDEMPOTENCY_ENABLED=true
IDEMPOTENCY_TTL_SECONDS=86400

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60
CIRCUIT_BREAKER_HALF_OPEN_ATTEMPTS=3

# Retry Configuration
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_MS=100
RETRY_MAX_DELAY_MS=5000
RETRY_EXPONENTIAL_BASE=2

# Timeout Configuration
REQUEST_TIMEOUT_SECONDS=30
INFERENCE_TIMEOUT_SECONDS=10
REDIS_OPERATION_TIMEOUT_SECONDS=2
POSTGRES_OPERATION_TIMEOUT_SECONDS=5

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT_SECONDS=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8000
ENABLE_TRACING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000

# Memory Growth Debug (MUST BE FALSE IN PROD)
DEBUG_MEMORY_GROWTH=false
DEBUG_MEMORY_GROWTH_MB_PER_REQUEST=0

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_change_in_prod
